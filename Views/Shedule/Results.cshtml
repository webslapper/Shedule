@using Shedule.Models;

@model List<Lesson>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

@{
    ViewData["Title"] = "Расписание для блатных";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Дата</th>
                <th>Начало занятия</th>
                <th>Конец занятия</th>
                <th>Предмет</th>
                <th>Вид заниятия</th>
                <th>Группа</th>
				<th>Преподаватель</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lesson in Model)
            {
                <tr>
                    <td>@lesson.Date</td>
                    <td>@lesson.StartTime</td>
                    <td>@lesson.EndTime</td>
                    <td>@lesson.Discipline</td>
                    <td>@lesson.DisciplineType.Title</td>
					<td>@lesson.Group.CreateGroupCode()</td>
					<td>@lesson.Teacher.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Подключаем Bootstrap JS (если необходимо) -->
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
}