@using Shedule.Models;
@using Shedule.Views.Shedule;

@model GroupFormModel

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<h2>Расписание</h2>
<form asp-controller="Shedule" asp-action="GetSheduleAsync" method="post">
	<div>
		<label>Курс</label>
		<select asp-for="SelectedCourse" asp-items="Model.Courses" class="form-control">
			<option value="">Выбрать</option>
			@foreach (var c in Model.Courses){
				<option value="@c.Value">@c.Text</option>
			}
		</select>
	</div>
	<div>
		<label>Специализация</label>
		<select asp-for="SelectedSpecDesc" asp-items="Model.SpecDescs" class="form-control">
			<option value="">Выбрать</option>
			@foreach (var sd in Model.SpecDescs){
				<option value="@sd.Value">@sd.Text</option>
			}
		</select>
	</div>
	<div>
		<label>Направление подготовки</label>
		<select asp-for="SelectedTrainDir" asp-items="Model.TrainDirs" class="form-control">
			<option value="">Выбрать</option>
			@foreach (var td in Model.TrainDirs){
				<option value="@td.Value">@td.Text</option>

			}
		</select>
	</div>
	<div>
		<label>Подгруппа</label>
		<select asp-for="SelectedSubGroup" asp-items="Model.SubGroups" class="form-control">
			<option value="">Выбрать</option>
			@foreach (var sg in Model.SubGroups){
				<option value="@sg.Value">@sg.Text</option>
			}
		</select>
	</div>

	<button type="submit" class="btn btn-primary">
		Показать расписание
	</button>
</form>

<!-- Подключаем Bootstrap JS (если необходимо) -->
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
}
